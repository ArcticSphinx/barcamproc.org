- @title = "BarCamp Rochester Attendee Topics"
- @bodyclass = "attendees"

%section.main-column
  %h1 BarCamp / CloudCamp Rochester
  %h2= data.global.next_event
  %h3 Here are some topics people will be presenting:
  %p
    If you haven't signed up yet, you can
    %a{:href => "/register/"} register here.

  %ul#attendees
    - data.attendees.talks.each do |a|
      %li.attendee{:title => a[:topic]}
        %p.who
          = a[:first_name] + " " + a[:last_name]
          - if not a[:twitter].blank?
            %a.twitter{:href => "http://twitter.com/#!/#{a.twitter}"}
              = "@" + a[:twitter]
        %p.what= a[:topic]

  %h3 These people signed up but don't have a topic:
  %ul#deadbeat
    - data.attendees.deadbeats.each do |a|
      %li.deadbeat{:title => a[:topic]}
        %p.who
          = a[:first_name] + " " + a[:last_name]
          - if not a[:twitter].blank?
            %a.twitter{:href => "http://twitter.com/#!/#{a.twitter}"}
              = "@" + a[:twitter]
